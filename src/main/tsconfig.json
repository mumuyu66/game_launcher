{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../build/main",
    "allowJs": true,
    "noImplicitAny": false,
    "paths": {
      "@main/*": ["./*"],
      "@common/*": ["../common/*"],
    },
  },
  "exclude": ["static"],
  "include": ["./**/*.ts", "../@types/**/*.d.ts", "../common/**/*.ts"]
}
